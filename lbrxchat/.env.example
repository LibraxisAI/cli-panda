# LBRXCHAT Environment Variables Example
# Copy this file to .env and fill in your values

# LM Studio Configuration
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_API_KEY=lm-studio

# MLX Model Settings
MLX_MODEL_PATH=mlx-community/Qwen2.5-7B-Instruct-4bit
MLX_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ChromaDB Settings
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=lbrxchat_docs

# Index Settings
INDEX_DIR=./indexes
CORPUS_DIR=./corpus

# Performance
MAX_CONTEXT_LENGTH=8192
BATCH_SIZE=32
NUM_WORKERS=4

# TUI Settings
TUI_THEME=dark
TUI_LOG_LEVEL=info