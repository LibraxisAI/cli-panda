# PostDevAI Environment Variables Example
# Copy this file to .env and fill in your values

# Dragon Node Configuration (M3 Ultra Server)
DRAGON_NODE_HOST=192.168.1.100
DRAGON_NODE_PORT=50051
DRAGON_NODE_TOKEN=your-secure-token-here

# Developer Node Configuration
DEVELOPER_NODE_ID=dev-node-1
DEVELOPER_NODE_PORT=50052

# MLX Configuration
MLX_MODEL_PATH=mlx-community/Llama-3.2-3B-Instruct-4bit
MLX_EMBEDDING_MODEL=mlx-community/snowflake-arctic-embed-m-v1.5

# PostgresML Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postdevai
POSTGRES_USER=postdevai
POSTGRES_PASSWORD=secure-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RAM-Lake Settings
RAMLAKE_SIZE_GB=32
RAMLAKE_MOUNT_POINT=/mnt/ramlake

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
RUST_LOG=info
RUST_BACKTRACE=1